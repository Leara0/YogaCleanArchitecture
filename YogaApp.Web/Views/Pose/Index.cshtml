@using YogaApp.Domain.Entities
@model AllPosesByDifficultyViewModel

<h1>All Poses</h1>
<a asp-controller="Pose" asp-action="CreateNewPose">Create a Pose</a>

<div class="section">
    <div class="difficulty-section">
        <div class="difficulty-header">
            <h2>Beginner Poses</h2>
        </div>
        <div class="grid grid-2">
            @foreach(var pose in Model.EasyPoses)
            {
                <div class="card pose-card">
                    <img src="@(!string.IsNullOrEmpty(pose.ThumbnailLocalPath) ? pose.ThumbnailLocalPath : pose.ThumbnailUrlSvg)"
                         alt="@pose.PoseName"
                         class="pose-thumbnail" />
                    <div class="pose-info">
                        <h3>@pose.PoseName</h3>
                        @if(!string.IsNullOrEmpty(pose.SanskritName))
                        {
                            <p class="pose-sanskrit">@pose.SanskritName</p>
                        }
                        <div class="mt-sm">
                            <a href="@Url.Action("Details", "Pose", new { id = pose.PoseId })" class="btn btn-outline">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="difficulty-section">
        <div class="difficulty-header">
            <h2>Intermediate Poses</h2>
        </div>
        <div class="grid grid-2">
            @foreach(var pose in Model.MediumPoses)
            {
                <div class="card pose-card">
                    <img src="@(!string.IsNullOrEmpty(pose.ThumbnailLocalPath) ? pose.ThumbnailLocalPath : pose.ThumbnailUrlSvg)"
                         alt="@pose.PoseName"
                         class="pose-thumbnail" />
                    <div class="pose-info">
                        <h3>@pose.PoseName</h3>
                        @if(!string.IsNullOrEmpty(pose.SanskritName))
                        {
                            <p class="pose-sanskrit">@pose.SanskritName</p>
                        }
                        <div class="mt-sm">
                            <a href="@Url.Action("Details", "Pose", new { id = pose.PoseId })" class="btn btn-outline">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="difficulty-section">
        <div class="difficulty-header">
            <h2>Advanced Poses</h2>
        </div>
        <div class="grid grid-2">
            @foreach(var pose in Model.HardPoses)
            {
                <div class="card pose-card">
                    <img src="@(!string.IsNullOrEmpty(pose.ThumbnailLocalPath) ? pose.ThumbnailLocalPath : pose.ThumbnailUrlSvg)"
                         alt="@pose.PoseName"
                         class="pose-thumbnail" />
                    <div class="pose-info">
                        <h3>@pose.PoseName</h3>
                        @if(!string.IsNullOrEmpty(pose.SanskritName))
                        {
                            <p class="pose-sanskrit">@pose.SanskritName</p>
                        }
                        <div class="mt-sm">
                            <a href="@Url.Action("Details", "Pose", new { id = pose.PoseId })" class="btn btn-outline">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
