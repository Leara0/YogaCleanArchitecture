@using YogaApp.Domain.Entities
@model AllPosesByDifficultyViewModel

<h2>All Poses</h2>
<a asp-controller="Pose" asp-action="CreateNewPose">Create a Pose</a>

<h4>Easy Poses</h4>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Sanskrit Name</th>
        <th>Description</th>
        <th>Image</th>
    </tr>
    @foreach (var pose in Model.EasyPoses)
    {
        <tr>
            <td><a asp-action="Details" asp-controller="Pose" asp-route-id="@pose.PoseId">@pose.PoseName</a></td>
            <td>@pose.SanskritName</td>
            <td>@pose.PoseDescription</td>
            <td>
                @if (!string.IsNullOrEmpty(pose.ThumbnailLocalPath))
                {
                    <img src="@pose.ThumbnailLocalPath" alt="@pose.PoseName"
                         onerror="this.src='@pose.ThumbnailUrlSvg';" loading="lazy"/>
                }
                else
                {
                    <img src="@pose.ThumbnailUrlSvg" alt="@pose.PoseName" loading="lazy"/>
                }
            </td>
        </tr>
    }
</table>

